#!/usr/bin/env ruby
# 1.9 adds realpath to resolve symlinks; 1.8 doesn't
# have this method, so we add it so we get resolved symlinks
# and compatibility
require 'rubygems'
require 'pp'
require 'date'
require 'chronic'
require 'date'
require "./lib/attask.rb"
require 'cgi'



options = {}
# need to add one more key with status = "ROP" to this hash
options[:query] = {:"assignedTo:firstName" => "Skye", :status => ["NEW", "ROP"],  :fields => "ID,name,objCode,description,status", :"$$limit" => 500}
tasks = Attask.get_all_tasks(options)
issues = Attask.get_all_issues(options)
pp tasks

